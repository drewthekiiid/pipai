# =============================================================================
# PIP AI Environment Variables - TEMPLATE
# =============================================================================

# =============================================================================
# OpenAI Configuration
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ASSISTANT_ID=asst_your-assistant-id
OPENAI_MODEL=gpt-4o

# =============================================================================
# AWS Configuration (REQUIRED)
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your-s3-bucket-name-here

# =============================================================================
# Temporal Cloud Configuration (REQUIRED)
# =============================================================================
TEMPORAL_ADDRESS=us-east-1.aws.api.temporal.io:7233
TEMPORAL_NAMESPACE=your-namespace.account-id
TEMPORAL_API_KEY=your-temporal-api-key-here
TEMPORAL_TASK_QUEUE=pip-ai-task-queue

# =============================================================================
# Application Configuration (REQUIRED)
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NODE_ENV=development

# =============================================================================
# Optional Configuration Variables
# =============================================================================
# Feature flags and configuration
SUPPORTED_FORMATS=pdf,doc,docx,txt,jpg,jpeg,png
COMPRESSION_THRESHOLD=1000000
ENABLE_AUDIT_LOGGING=true
ENABLE_COST_TRACKING=true
ENABLE_ADVANCED_ROUTING=true
ENABLE_BATCH_PROCESSING=false
USE_LLM_MANAGER=true

# Internal secrets
INTERNAL_SECRET_CODE=your-internal-secret
PULUMI_INTERNAL_SECRET=your-pulumi-secret
PULUMI_ACCESS_TOKEN=your-pulumi-token

# Assistant configuration
assistant_id=asst_your-assistant-id
TEMPORAL_SERVICE_KEY=your-temporal-service-key

# =============================================================================
# Development/Local Services (Optional)
# =============================================================================
DATABASE_URL=postgresql://pipai:pipai_dev_password@localhost:5433/pipai_dev
UPSTASH_REDIS_REST_URL=your-upstash-redis-rest-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-rest-token
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
REDIS_HOST=localhost
REDIS_PORT=6379
AWS_ENDPOINT_URL=http://localhost:9000
SMTP_HOST=localhost
SMTP_PORT=1025
DEBUG=pip-ai:*
