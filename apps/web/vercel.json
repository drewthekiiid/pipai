{
  "installCommand": "cd ../.. && pnpm install --frozen-lockfile",
  "buildCommand": "cd ../.. && turbo build --filter=web",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "functions": {
    "src/app/api/upload/**/*.ts": {
      "maxDuration": 60,
      "maxRequestSize": "100mb"
    },
    "src/app/api/assistant/**/*.ts": {
      "maxDuration": 90,
      "maxRequestSize": "100mb"
    },
    "src/app/api/**/*.ts": {
      "maxDuration": 60
    }
  }
}
