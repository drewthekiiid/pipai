# Environment variables for PIP AI Upload API
# Copy these values from your Pulumi stack outputs

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET_NAME=your_s3_bucket_name
AWS_REGION=us-east-1

# Temporal Configuration
TEMPORAL_HOST=us-east-1.aws.api.temporal.io:7233
TEMPORAL_NAMESPACE=pip-ai.ts7wf
TEMPORAL_API_KEY=your_temporal_api_key
TEMPORAL_TASK_QUEUE=pip-ai-task-queue

# Upstash Redis Configuration (for streaming)
UPSTASH_REDIS_REST_URL=your_redis_rest_url
UPSTASH_REDIS_REST_TOKEN=your_redis_rest_token

# API Configuration
PORT=8000
DEBUG=true

# CORS Configuration (configure for production)
ALLOWED_ORIGINS=*
