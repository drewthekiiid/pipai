# =============================================================================
# PIP AI Environment Variables Template
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control
# =============================================================================

# =============================================================================
# OpenAI Configuration
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket-name

# =============================================================================
# Temporal Cloud Configuration
# =============================================================================
TEMPORAL_NAMESPACE=your-temporal-namespace
TEMPORAL_API_KEY=your-temporal-api-key
TEMPORAL_TASK_QUEUE=pip-ai-tasks

# =============================================================================
# Redis Configuration (Upstash)
# =============================================================================
REDIS_URL=redis://your-redis-url
REDIS_TOKEN=your-redis-token

# =============================================================================
# Vercel Configuration (for deployment)
# =============================================================================
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-vercel-org-id
VERCEL_PROJECT_ID=your-vercel-project-id

# =============================================================================
# Application Configuration
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# =============================================================================
# Development Configuration
# =============================================================================
NODE_ENV=development
DEBUG=pip-ai:*

# =============================================================================
# Security Configuration
# =============================================================================
# Add any JWT secrets, encryption keys, etc. here
# JWT_SECRET=your-jwt-secret
# ENCRYPTION_KEY=your-encryption-key

# =============================================================================
# Database Configuration (if needed)
# =============================================================================
DATABASE_URL=file:./temporal.db

# =============================================================================
# Third-party Services (add as needed)
# =============================================================================
# STRIPE_SECRET_KEY=sk_test_your-stripe-key
# SENDGRID_API_KEY=your-sendgrid-key
# SENTRY_DSN=your-sentry-dsn

# =============================================================================
# Unstructured-IO Configuration
# =============================================================================
# For local development (use localhost)
# For production (automatically uses https://pip-ai-unstructured.fly.dev)
UNSTRUCTURED_API_URL=http://localhost:8000
UNSTRUCTURED_API_KEY=pip-ai-secure-key 