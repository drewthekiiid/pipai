{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "GITHUB_TOKEN",
    "OPENAI_O4_MINI_KEY",
    "OPENAI_O3_KEY",
    "OPENAI_GPT4_KEY",
    "OPENAI_GPT4_MINI_KEY",
    "VISION_MODEL",
    "V0_TOKEN",
    "V0_API_KEY",
    "TEMPORAL_API_KEY",
    "TEMPORAL_ADDRESS",
    "TEMPORAL_NAMESPACE",
    "TEMPORAL_TASK_QUEUE",
    "CLERK_SECRET_KEY",
    "CLERK_PUBLISHABLE_KEY",
    "UPSTASH_API_KEY",
    "UPSTASH_REDIS_REST_URL",
    "UPSTASH_REDIS_REST_TOKEN",
    "QDRANT_URL",
    "QDRANT_API_KEY",
    "LANGCHAIN_TRACING_V2",
    "LANGCHAIN_API_KEY",
    "HELICONE_API_KEY",
    "DATABASE_URL",
    "NEON_PROJECT_ID",
    "NEON_PROJECT_NAME",
    "NEON_REGION",
    "POSTGRES_USER",
    "POSTGRES_PASSWORD",
    "POSTGRES_DB",
    "DATABASE_URL_DEV",
    "SUPABASE_URL",
    "SUPABASE_KEY",
    "SUPABASE_ANON_KEY",
    "SUPABASE_SERVICE_ROLE_KEY",
    "AWS_S3_BUCKET_NAME",
    "SMARTSHEET_ACCESS_TOKEN",
    "SMARTSHEET_API_KEY",
    "SMARTSHEET_BASE_URL",
    "ENVIRONMENT",
    "DEBUG",
    "LOG_LEVEL",
    "DEMO_MODE",
    "FAIL_ON_LLM_ERROR",
    "CORS_ORIGINS",
    "VITE_API_URL",
    "MAX_FILE_SIZE",
    "SUPPORTED_FORMATS",
    "COMPRESSION_THRESHOLD",
    "ENABLE_AUDIT_LOGGING",
    "ENABLE_COST_TRACKING",
    "ENABLE_ADVANCED_ROUTING",
    "ENABLE_BATCH_PROCESSING",
    "USE_LLM_MANAGER",
    "INTERNAL_SECRET_CODE",
    "PULUMI_INTERNAL_SECRET",
    "PULUMI_ACCESS_TOKEN",
    "OPENAI_ASSISTANT_ID",
    "assistant_id"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "OPENAI_API_KEY",
        "OPENAI_ASSISTANT_ID",
        "OPENAI_MODEL",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_REGION",
        "S3_BUCKET_NAME",
        "AWS_S3_BUCKET_NAME",
        "TEMPORAL_NAMESPACE",
        "TEMPORAL_API_KEY",
        "TEMPORAL_TASK_QUEUE",
        "TEMPORAL_ADDRESS",
        "REDIS_URL",
        "REDIS_TOKEN",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN",
        "DATABASE_URL",
        "NEXT_PUBLIC_APP_URL",
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_OPENAI_API_KEY",
        "NEXT_PUBLIC_APP_NAME",
        "NEXT_PUBLIC_APP_VERSION",
        "NODE_ENV",
        "ENVIRONMENT",
        "DEBUG",
        "LOG_LEVEL",
        "SMARTSHEET_ACCESS_TOKEN",
        "SMARTSHEET_API_KEY",
        "SMARTSHEET_BASE_URL",
        "LANGCHAIN_TRACING_V2",
        "LANGCHAIN_API_KEY",
        "INTERNAL_SECRET_CODE",
        "CORS_ORIGINS",
        "MAX_FILE_SIZE",
        "SUPPORTED_FORMATS",
        "COMPRESSION_THRESHOLD",
        "NEXT_PUBLIC_MAX_FILE_SIZE",
        "NEXT_PUBLIC_ALLOWED_FILE_TYPES",
        "NEXT_PUBLIC_ENABLE_SMARTSHEET",
        "NEXT_PUBLIC_ENABLE_ADMIN_PANEL",
        "NEXT_PUBLIC_ENABLE_ANALYTICS",
        "NEXT_PUBLIC_ENABLE_DARK_MODE",
        "NEXT_PUBLIC_DEBUG_MODE",
        "NEXT_PUBLIC_ENABLE_AGENT_PROGRESS",
        "NEXT_PUBLIC_ENABLE_SESSION_RESULTS",
        "NEXT_PUBLIC_ENABLE_BATCH_PROCESSING",
        "NEXT_PUBLIC_ENABLE_FILE_STAGING",
        "NEXT_PUBLIC_ENABLE_WORKFLOW_CONTROLS"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "type-check": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  }
}
