{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "OPENAI_API_KEY",
        "OPENAI_ASSISTANT_ID",
        "OPENAI_MODEL",
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_REGION",
        "AWS_S3_BUCKET_NAME",
        "S3_BUCKET_NAME",
        "TEMPORAL_ADDRESS",
        "TEMPORAL_NAMESPACE",
        "TEMPORAL_API_KEY",
        "TEMPORAL_TASK_QUEUE",
        "TEMPORAL_SERVICE_KEY",
        "REDIS_URL",
        "REDIS_TOKEN",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN",
        "NEXT_PUBLIC_APP_URL",
        "NEXT_PUBLIC_API_URL",
        "NODE_ENV",
        "DATABASE_URL",
        "SUPPORTED_FORMATS",
        "COMPRESSION_THRESHOLD",
        "ENABLE_AUDIT_LOGGING",
        "ENABLE_COST_TRACKING",
        "ENABLE_ADVANCED_ROUTING",
        "ENABLE_BATCH_PROCESSING",
        "USE_LLM_MANAGER",
        "INTERNAL_SECRET_CODE",
        "PULUMI_INTERNAL_SECRET",
        "PULUMI_ACCESS_TOKEN",
        "assistant_id"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "type-check": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  }
}
